<div class="w-full py-6 px-2">
  <div class="border-2 border-gray-900 bg-white shadow-lg rounded-lg overflow-hidden px-4">
    <a href="{{ product.url }}">
      {% if product.featured_image %}
        <div class="h-70 overflow-hidden">
          {{ product.featured_image | image_url: width: 300 | image_tag: class: "w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform", alt: product.featured_image.alt }}
        </div>
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100 transition duration-1000 ease-in-out hover:scale-105 transform' }}
      {% endif %}
    </a>

    <div class="flex flex-col px-2 pb-2">
      {% if showVendor %}
        <span class="text-sm text-gray-400">{{ product.vendor }}</span>
      {% endif %}
      <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium">
        {{ product.title | truncatewords: 8 }}
      </a>
      <p class="text-gray-500">{{ product.price | money }}</p>
    </div>

  </div>
</div>